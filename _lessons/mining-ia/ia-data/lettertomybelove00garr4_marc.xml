  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="a">Near Hollyhead, 70 miles from Liverpool, [England],</subfield>
    <subfield code="c">Monday afternoon, June 15, 1840, 5 o&apos;clock.</subfield>
  </datafield>
