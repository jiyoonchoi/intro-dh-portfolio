  <datafield tag="260" ind1=" " ind2=" ">
    <subfield code="a">Boston, [Mass.],</subfield>
    <subfield code="c">Nov. 20th, 1838, Tuesday morning.</subfield>
  </datafield>
  <datafield tag="300" ind1=" " ind2=" ">
